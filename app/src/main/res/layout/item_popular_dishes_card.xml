<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    xmlns:card_view="http://schemas.android.com/tools"
    app:cardCornerRadius="4dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardUseCompatPadding="true"
    android:clipToPadding="false"
    android:layout_height="match_parent"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <fr.arnaudguyon.smartfontslib.FontTextView
            app:smart_font="fonts/Ubuntu-M.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Best Seller"
            android:textSize="10sp"
            android:elevation="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="10dp"
            android:id="@+id/bestSellerTag"
            android:paddingLeft="6dp"
            android:textColor="@android:color/white"
            android:background="@drawable/best_seller_bg"
            android:textStyle="bold"
            android:textAllCaps="true"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:id="@+id/dishIV"
            android:src="@drawable/noodles"/>

        <LinearLayout
            android:layout_below="@+id/dishIV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/veg"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/dishTypeIV"/>

                <fr.arnaudguyon.smartfontslib.FontTextView
                    app:smart_font="fonts/Ubuntu-M.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:id="@+id/dishTitle"
                    android:layout_toRightOf="@+id/dishTypeIV"
                    android:textColor="@color/search_tab_text_selected"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:minHeight="42dp"
                    android:layout_alignParentTop="true"
                    android:text="Hot Samosas with chutney"
                    />

            </RelativeLayout>

            <fr.arnaudguyon.smartfontslib.FontTextView
                app:smart_font="fonts/Ubuntu-M.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:id="@+id/restaurant"
                android:text="Pista House"
                android:paddingLeft="10dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp">

                <fr.arnaudguyon.smartfontslib.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/res"
                    android:textSize="12sp"
                    android:layout_centerVertical="true"
                    android:id="@+id/rupeeSymbol"/>

                <fr.arnaudguyon.smartfontslib.FontTextView
                    app:smart_font="fonts/Ubuntu-M.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:id="@+id/price"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/rupeeSymbol"
                    android:text="25 per piece"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingLeft="9dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:id="@+id/deliveryIcon"
                    android:layout_marginTop="2.7dp"
                    android:src="@drawable/ic_delivery"/>

                <fr.arnaudguyon.smartfontslib.FontTextView
                    app:smart_font="fonts/Ubuntu-M.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:id="@+id/deliveryTime"
                    android:paddingLeft="3dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/deliveryIcon"
                    android:text="30 min"
                    />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingLeft="9dp"
                android:layout_marginTop="5dp"
                android:clipToPadding="false"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:id="@+id/starIcon"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_star"/>

                <fr.arnaudguyon.smartfontslib.FontTextView
                    app:smart_font="fonts/Ubuntu-M.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:id="@+id/rating"
                    android:paddingLeft="3dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/starIcon"
                    android:textColor="@color/starGreen"
                    android:text="3.1"
                    />

                <fr.arnaudguyon.smartfontslib.FontTextView
                    app:smart_font="fonts/Ubuntu-B.ttf"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:elevation="2dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/add_to_cart_button_bg"
                    android:textColor="@android:color/white"
                    android:id="@+id/addToCart"
                    android:text="ADD"/>


            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>



</android.support.v7.widget.CardView>