<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    xmlns:card_view="http://schemas.android.com/tools"
    app:cardCornerRadius="4dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardUseCompatPadding="true"
    android:clipToPadding="false"
    android:layout_height="match_parent"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <fr.arnaudguyon.smartfontslib.FontTextView
            app:smart_font="fonts/Ubuntu-M.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50% OFF"
            android:textSize="10sp"
            android:elevation="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="10dp"
            android:id="@+id/offerDescTag"
            android:paddingLeft="6dp"
            android:textColor="@android:color/white"
            android:background="@drawable/firesale_offer_bg"
            android:textStyle="bold"
            android:textAllCaps="true"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:id="@+id/dishIV"
            android:src="@drawable/noodles"/>

        <LinearLayout
            android:layout_below="@+id/dishIV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/veg"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/dishTypeIV"/>

                <fr.arnaudguyon.smartfontslib.FontTextView
                    app:smart_font="fonts/Ubuntu-M.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:id="@+id/dishTitle"
                    android:layout_toRightOf="@+id/dishTypeIV"
                    android:textColor="@color/black_variant_two"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_centerVertical="true"
                    android:text="Butter Naan"
                    />

            </RelativeLayout>

            <fr.arnaudguyon.smartfontslib.FontTextView
                app:smart_font="fonts/Ubuntu-R.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:id="@+id/restaurant"
                android:text="Pista House"
                android:paddingLeft="5dp"
                android:textColor="@color/search_tab_text"
                />


            <LinearLayout
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:clipToPadding="false"
                android:paddingBottom="3dp"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:layout_centerInParent="true"
                    >

                    <fr.arnaudguyon.smartfontslib.FontTextView
                        app:smart_font="fonts/Rupee_Foradian.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rupee"
                        android:textSize="12sp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black_variant"
                        android:id="@+id/rupeeSymbolStrike"/>

                    <fr.arnaudguyon.smartfontslib.FontTextView
                        app:smart_font="fonts/Rupee_Foradian.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:id="@+id/unitPrice"
                        android:layout_centerVertical="true"
                        android:textColor="@color/black_variant"
                        android:layout_toRightOf="@id/rupeeSymbolStrike"
                        android:text="39.00"
                        />



                </RelativeLayout>
                    





                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <fr.arnaudguyon.smartfontslib.FontTextView
                        app:smart_font="fonts/Rupee_Foradian.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rupee"
                        android:textSize="12sp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/red"
                        android:id="@+id/rupeeSymbol"/>

                    <fr.arnaudguyon.smartfontslib.FontTextView
                        app:smart_font="fonts/Rupee_Foradian.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:id="@+id/offerPrice"
                        android:paddingLeft="1dp"
                        android:textColor="@color/red"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/rupeeSymbol"
                        android:text="125.00"
                        />
                </RelativeLayout>


                <fr.arnaudguyon.smartfontslib.FontTextView
                    app:smart_font="fonts/Ubuntu-M.ttf"
                    android:textSize="12sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:elevation="2dp"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/add_to_cart_button_bg"
                    android:textColor="@android:color/white"
                    android:id="@+id/addToCartFiresale"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="ADD"/>

            </LinearLayout>



            <fr.arnaudguyon.smartfontslib.FontTextView
                app:smart_font="fonts/Ubuntu-M.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:id="@+id/stockLeft"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_centerVertical="true"
                android:textColor="@color/black_variant"
                android:layout_toRightOf="@id/rupeeSymbolStrike"
                android:text="Only 5 left"
                />



        </LinearLayout>
    </RelativeLayout>



</android.support.v7.widget.CardView>