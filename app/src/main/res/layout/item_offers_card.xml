<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:clipToPadding="false"
    android:padding="10dp"
    android:layout_height="wrap_content">

<android.support.v7.widget.CardView
    android:layout_width="180dp"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="10dp"
    card_view:cardUseCompatPadding="true"
    android:clipToPadding="false"
    android:layout_height="180dp"
    app:cardElevation="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout
    android:id="@+id/parentOfferLayout"
    android:layout_width="match_parent"
    android:background="@color/starGreen"
    android:padding="6dp"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:id="@+id/offerIv"
        android:src="@drawable/noodles"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            >
            <com.intrusoft.squint.DiagonalView
                android:id="@+id/diagonal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:src="#80000000"
                app:diagonalDirection="bottom_to_top"
                app:angle="82"
                app:gravity="top"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:elevation="20dp"
                android:background="@drawable/white_circle_bg"
                android:layout_marginLeft="5dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="5dp"
                android:layout_centerVertical="true"
                android:id="@+id/trendingIV"
                android:visibility="visible"
                android:src="@drawable/trending"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:orientation="vertical">
            <fr.arnaudguyon.smartfontslib.FontTextView
                app:smart_font="fonts/Ubuntu-R.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="6sp"
                android:id="@+id/specialTV"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="3dp"
                android:visibility="visible"
                android:background="@drawable/white_rounded_bg"
                android:textColor="@android:color/black"
                android:text="SPECIAL"/>

            <fr.arnaudguyon.smartfontslib.FontTextView
                app:smart_font="fonts/Ubuntu-B.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:id="@+id/offerTitle"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@android:color/white"
                android:maxLines="2"
                android:ellipsize="end"
                android:minHeight="30dp"
                android:text="BUY ONE GET ONE BIRYANI FREE"
                />

            <fr.arnaudguyon.smartfontslib.FontTextView
                app:smart_font="fonts/Ubuntu-R.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:id="@+id/offerDesc"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="1dp"
                android:textColor="@android:color/white"
                android:text="Exclusive offer for laalsa members"
                />
        </LinearLayout>



    </LinearLayout>











</RelativeLayout>



</android.support.v7.widget.CardView>
</LinearLayout>


