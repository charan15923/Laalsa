<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="166dp"
    xmlns:card_view="http://schemas.android.com/tools"
    app:cardCornerRadius="4dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardUseCompatPadding="true"
    android:clipToPadding="false"
    android:layout_height="match_parent"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <ImageView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:id="@+id/restaurantIV"
                android:src="@drawable/noodles"/>

            <LinearLayout
                android:layout_below="@+id/restaurantIV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">



                <fr.arnaudguyon.smartfontslib.FontTextView
                    app:smart_font="fonts/Ubuntu-M.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:id="@+id/restaurant"
                    android:textColor="@color/item_header_color"
                    android:lines="2"
                    android:maxLines="2"
                    android:minHeight="30dp"
                    android:ellipsize="end"
                    android:layout_marginLeft="10dp"
                    android:text="Pista House"
                    />


                <fr.arnaudguyon.smartfontslib.FontTextView
                    app:smart_font="fonts/Ubuntu-R.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/area"
                    android:text="Banjara Hills"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black_variant"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="5dp">



                    <fr.arnaudguyon.smartfontslib.FontTextView
                        app:smart_font="fonts/Ubuntu-M.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:id="@+id/cuisine"
                        android:textColor="@color/search_tab_text"
                        android:text="Mughlai, Chinese"
                        />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="5dp">

                    <fr.arnaudguyon.smartfontslib.FontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/res"
                        android:textSize="12sp"
                        android:layout_centerVertical="true"
                        android:id="@+id/rupeeSymbol"/>

                    <fr.arnaudguyon.smartfontslib.FontTextView
                        app:smart_font="fonts/Ubuntu-M.ttf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:id="@+id/price"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/rupeeSymbol"
                        android:text="300 per person"
                        />


                </RelativeLayout>


                <RelativeLayout
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_width="match_parent"
                        android:paddingLeft="9dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:id="@+id/deliveryIcon"
                            android:layout_marginTop="2.7dp"
                            android:src="@drawable/ic_delivery"/>

                        <fr.arnaudguyon.smartfontslib.FontTextView
                            app:smart_font="fonts/Ubuntu-M.ttf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="11sp"
                            android:id="@+id/deliveryTime"
                            android:paddingLeft="3dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@id/deliveryIcon"
                            android:text="30 min"
                            />


                    </RelativeLayout>




                <RelativeLayout
                    android:layout_width="match_parent"
                    android:paddingLeft="9dp"
                    android:layout_marginTop="5dp"
                    android:clipToPadding="false"
                    android:paddingRight="10dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_marginBottom="5dp"
                    android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:id="@+id/starIcon"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_star"/>

                <fr.arnaudguyon.smartfontslib.FontTextView
                    app:smart_font="fonts/Ubuntu-M.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:id="@+id/rating"
                    android:paddingLeft="3dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/starIcon"
                    android:textColor="@color/starGreen"
                    android:text="3.1"
                    />


                <fr.arnaudguyon.smartfontslib.FontTextView
                    app:smart_font="fonts/Ubuntu-R.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textSize="10sp"
                    android:textColor="@color/closes_text_color"
                    android:id="@+id/closesInfoTV"
                    android:text="Closes in 2 hours"
                    />

                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>



    </android.support.v7.widget.CardView>

