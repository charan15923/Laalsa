<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        xmlns:card_view="http://schemas.android.com/tools"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardUseCompatPadding="true"
        android:clipToPadding="false"
        app:cardElevation="5dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        >


    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">



                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:weightSum="5"
                    android:background="@drawable/bottom_tabs_background">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/laalsa_ll"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/laalsa_tab"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_laalsa_tab"/>
                        <fr.arnaudguyon.smartfontslib.FontTextView
                            app:smart_font="fonts/Ubuntu-R.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:gravity="center"
                            android:layout_marginTop="2dp"
                            android:layout_gravity="center"
                            android:textColor="@color/tab_text_not_selected"
                            android:text="FOR YOU"
                            android:id="@+id/laalsa_tab_tv"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/explore_ll"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/explore_tab"
                            android:gravity="center"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_explore_tab"/>
                        <fr.arnaudguyon.smartfontslib.FontTextView
                            app:smart_font="fonts/Ubuntu-R.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:gravity="center"
                            android:layout_marginTop="2dp"
                            android:layout_gravity="center"
                            android:textColor="@color/tab_text_not_selected"
                            android:text="EXPLORE"
                            android:id="@+id/explore_tab_tv"
                            />

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:visibility="invisible"
                        android:id="@+id/dummy_ll"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/dummy_tab"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_laalsa_tab"/>
                        <fr.arnaudguyon.smartfontslib.FontTextView
                            app:smart_font="fonts/Ubuntu-R.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:gravity="center"
                            android:layout_marginTop="2dp"
                            android:layout_gravity="center"
                            android:textColor="@color/tab_text_not_selected"
                            android:text="FOR YOU"
                            android:id="@+id/dummy_tab_tv"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/deals_ll"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/deals_tab"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_deals_tab"/>
                        <fr.arnaudguyon.smartfontslib.FontTextView
                            app:smart_font="fonts/Ubuntu-R.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:gravity="center"
                            android:layout_marginTop="2dp"
                            android:layout_gravity="center"
                            android:textColor="@color/tab_text_not_selected"
                            android:text="DEALS"
                            android:id="@+id/deals_tab_tv"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/account_ll"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/account_tab"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_account_tab"/>
                        <fr.arnaudguyon.smartfontslib.FontTextView
                            app:smart_font="fonts/Ubuntu-R.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:gravity="center"
                            android:layout_marginTop="2dp"
                            android:layout_gravity="center"
                            android:textColor="@color/tab_text_not_selected"
                            android:text="account"
                            android:textAllCaps="true"
                            android:id="@+id/account_tab_tv"
                            />

                    </LinearLayout>




                </LinearLayout>


            </RelativeLayout>


        </FrameLayout>
    </LinearLayout>

    </android.support.v7.widget.CardView>



</merge>